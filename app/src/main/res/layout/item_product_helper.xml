<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="#fff"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="17dp"
        android:background="@color/gray"
        android:id="@+id/iv_product_url"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_product_url"
        app:layout_constraintRight_toRightOf="@id/iv_product_url"
        app:layout_constraintTop_toBottomOf="@+id/iv_product_url" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E91E63"
        app:layout_constraintLeft_toLeftOf="@id/tv_product_name"
        app:layout_constraintRight_toRightOf="@id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name" />
</androidx.constraintlayout.widget.ConstraintLayout>