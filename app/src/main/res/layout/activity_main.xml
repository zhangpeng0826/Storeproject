<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <FrameLayout
        android:background="#fff"
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rg_main"
       app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/rb_home_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/select_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/select_text" />

        <RadioButton
            android:id="@+id/rb_special_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_special"
            android:gravity="center"
            android:text="专题"
            android:textColor="@color/select_text" />

        <RadioButton
            android:id="@+id/rb_classify_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_classify"
            android:gravity="center"
            android:text="分类"
            android:textColor="@color/select_text" />

        <RadioButton
            android:id="@+id/rb_shopcal_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_shopcal"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/select_text" />

        <RadioButton
            android:id="@+id/rb_my_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_my"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/select_text" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>